  <body>

<header>
<nav class="navbar navbar-expand navbar-dark bg-primary">


  <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/homepage" class="nav-link">Home Page</a>
            </li>
            
            <li class="nav-item">
              <a href="/language" class="nav-link">Language</a>
            </li>
          </ul>
</nav>
